# Clerk Authentication
# Get your keys from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Sumsub KYC Verification
# Get your keys from https://cockpit.sumsub.com -> Developers -> Tokens
SUMSUB_APP_TOKEN=sbx_your_app_token_here
SUMSUB_SECRET_KEY=your_secret_key_here
SUMSUB_LEVEL_NAME=basic-kyc-level

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# ============ Alpaca Trading/Data API (for market data) ============
# Get these from https://app.alpaca.markets/paper/dashboard/overview (API Keys section)
ALPACA_API_KEY=your_api_key_here
ALPACA_API_SECRET=your_api_secret_here

# ============ Alpaca Broker API (OAuth client_credentials) ============
# Client ID and Secret from Alpaca Broker Dashboard
ALPACA_CLIENT_ID=your_client_id_here
ALPACA_CLIENT_SECRET=your_client_secret_here

# Auth and Broker URLs (defaults to sandbox)
ALPACA_AUTH_URL=https://authx.sandbox.alpaca.markets
ALPACA_BROKER_URL=https://broker-api.sandbox.alpaca.markets

# For production, use:
# ALPACA_AUTH_URL=https://authx.alpaca.markets
# ALPACA_BROKER_URL=https://broker-api.alpaca.markets

# ============ Finnhub API (for market data) ============
# Get your free API key from https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# ============ Polygon.io API (for reference data) ============
# Get your API key from https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_api_key_here

# ============ Redis Cache ============
# Redis connection URL (defaults to localhost:6379)
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3000
